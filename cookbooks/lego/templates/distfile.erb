<%- other_hosts = %w[airstrip1 b0rsch] -%>
HOSTS = ( <%= other_hosts.join(' ') %> )

<% @lego_certs.each do |cert| -%>
<%- upcased = cert.name.upcase.gsub('-', '_') -%>
FILES_<%= upcased %> = ( /etc/ssl/<%= cert.domains.first %>.crt /etc/ssl/<%= cert.domains.first %>.key )

${FILES_<%= upcased %>} -> ${HOSTS}
	install -overify ;

<% end %>
<% if @hosts %>
<% other_hosts.each do |hostname| %>
# restart services on <%= hostname %>
<% @lego_certs.each do |cert| %>
${FILES_<%= upcased %>} -> <%= hostname %>
	special "rcctl restart httpd && rcctl restart relayd && rcctl restart smtpd" ;
<%- end -%>
<%- end -%>
<%- end -%>
