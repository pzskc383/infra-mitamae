# http -> https redirects
server "main_plain" {
    alias "*.pzskc383.net"
    alias "pzskc383.net"

    listen on $loopback port $redirect_port

    log {
        style forwarded
        access "access.redir.log"
        error "error.redir.log"
    }

    location * {
        block return 302 "https://$HTTP_HOST$REQUEST_URI"
    }
}

