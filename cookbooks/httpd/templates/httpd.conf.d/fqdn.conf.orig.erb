<%- @fqdn_hosts.each do |type, addr| %>
server "_fqdn_<%= type %>" {
    alias "<%= addr %>"

    listen on $loopback port $redirect_port
    <%- if type == "host" -%>
    listen on $loopback port $serve_port
    <%- end %>

    log {
        style forwarded
        access "access.fqdn.log"
        error "error.fqdn.log"
    }

    root "htdocs/fqdn/<%= type %>"
}
<%- end %>